<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>AlotyJalopy</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
  </head>
  <body>
    @using Inventory.Models;

    <h1>Welcome to Alot-y Jalopy</h1>
    <h2>Welcome to the lot!</h2>
    @if (Model.Count == 0)
    {
      <p>There are no cars for sale. Check back after we get these supply chain issues figured out!</p>
    }
    <ul>
      @foreach (Car car in Model)
      {
        <li>@car.Model</li>
      }
    </ul>

    <a href="/index/new">Add a new car.</a>

    <form action="/index/delete" method="post">
      <button type="submit" name="button">Clear Inventory</button>
    </form>

  </body>
</html>